// This program asks user to input an integer representing a year number (1999, 2016, etc.).
// If the input year is a leap year according to the modern Gregorian calendar,
// it should print Leap year, otherwise, print Common year.

#include <iostream>
using namespace std;

bool leap_year(int year)
{
 bool leap = true;
 if ((year % 4 != 0) || (year % 400 != 0))
 {
  leap = false;
 }
 if (year % 100 != 0)
 {
  return leap;
 }
 return leap;
}

int main()
{
 int year;
 cout << "Enter year: ";
 cin >> year;
 if (leap_year(year))
 {
  cout << "Leap Year" << endl; 
 }
 else
 {
  cout << "Common Year" << endl;
 }
 return 0;
}
